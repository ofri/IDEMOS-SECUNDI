<!DOCTYPE html>

<html>
<head>
    <%- partial('partials/head.ejs') %>
    <script src="/resources/js/jquery-fieldselection.js" type="text/javascript"></script>
</head>
<body>
<%- partial('partials/body_top.ejs') %>
<div id="wrap">
        <div id="header">
            <%-partial('partials/menu.ejs')%>
            <%-partial('partials/user_box.ejs')%>
            <%-partial('partials/failures.ejs')%>
            <%-partial('partials/tag_search.ejs') %>
        </div>
        <div id="content" class="cf">
            <h2><a class="arrow" href="">כותרת הבלוג</a> כותרת משנה כותרת משנה</h2>
            <div class="rightCol">
                <% for (var i = 0; i < articles.length && i < 8 ; i++) { %>
                        <div class="one-post">
                            <h3>

                            <%= articles[i].title %>
                             </h3>

                            <div class="date-post">
                                <%= articles[i].time.format('dd/mm/yy') %>
                            </div>
                            <img class="floatRight" src="images/post-1.jpg" alt="" />
                            <%= articles[i].text %>
                            <div class="bottom cf">
                                <div class="right">
                                    <div class="tags">
                                        <a class="like-btn" href=""><img src="images/like-btn.png" alt="" /></a>
                                     <% for (var c = 0; c <articles[i].tags.length; c++) { %>
                                           <a href="#"> <%=articles[i].tags[c] %></a>
                                     <% }%>

                                    </div>
                                </div>
                                <a class="btn-grey" href="">בגה</a>
                            </div>
                            <div class="post-comment">
                                <h3>תגובות</h3>
                            </div>
                        </div>
                <% }%>


                <div class="nav-post">
                    <a href="">< פוסט הבא</a> | <a href="">פוסט קודם ></a>
                </div>
            </div>
            <div class="leftCol leftCol-width noPadding">
                <div class="profile-box">
                    <div class="profile-info cf">
                       <% if (user.avatar_url) { %>
                       <div class="img-box">
                            <img src="<%=user.avatar_url %> " alt="" />
                            <span></span>
                        </div>
                        <% } %>
                        <div class="left">
                            <h4><%=user.first_name %></h4>
                         <p><%=user.gender %></p>
                        <% if (user.blog_text_1) { %>        <p><%=user.blog_text_1 %></p>      <% } %>
                        <% if (user.blog_text_2) { %>        <p><%=user.blog_text_2 %></p>      <% } %>
                        <% if (user.blog_text_3) { %>        <p><%=user.blog_text_3 %></p>      <% } %>
                        </div>
                        <div class="badges cf">
                            <div class="proxy">
                                <span><%=user.num_of_proxies_i_represent %></span> מנדטים
                            </div>
                            <div class="respect">
                                <span><%=user.score %></span> מוניטין
                            </div>
                        </div>
                     </div>
                    <% if (user.biography) { %>        <p><%=user.biography %></p>      <% } %>

                    <div class="links">
                        <p><a href="">www.mywebsite.com</a></p>
                        <p><a href="">www.facebook.com/myname</a></p>
                    </div>

                    <div class="btns-box cf">
                        <a class="floatLeft" href="">RSS</a>
                        <a href="" class="floatRight">דואר</a>
                    </div>
                </div>
                <div class="left-search">
                    <form action="#">
                        <label>חיפוש</label>
                        <input type="text" value="" />
                        <input type="submit" value="שפח" />
                    </form>
                </div>
                <div class="left-tags">
                    <h3>תגיות</h3>
                    <div class="tags">
                        <a href="">אבטלה</a>
                        <a href="">אבטלה</a>
                        <a href="">אבטלה</a>
                        <a href="">אבטלה</a>
                        <a href="">אבטלה</a>
                        <a href="">אבטלה</a>
                        <a href="">אבטלה</a>
                        <a href="">אבטלה</a>
                        <a href="">אבטלה</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- partial('partials/footer.ejs') %>

<script type="text/javascript">

var current_section=3;
var bloggerId='<%=user ? user._id:'' %>';
var currentUserId='<%=user_logged._id %>';

$(document).ready(function () {
        getComments( '<%=articles[0]._id %>');
        getComments( '<%=articles[1]._id %>');

});

function getComments(article_id) {
    if(article_id)
    db_functions.getArticleComments(article_id, function(err, comment){
        if(!err){
            dust.render('article_comment',comment,function(err,out)
            {
                $(".post-comment").append(out);
            });
        }
    });
}

 </script>
</body>
</html>
