            $('.video_img').remove();
            $(this).append(
                    '<object width="560" height="315">' +
                            '<param name="movie" value="http://www.youtube.com/v/6LYw5crRh8E?version=3&autoplay=1&amp;hl=en_US&amp;rel=0" />' +
