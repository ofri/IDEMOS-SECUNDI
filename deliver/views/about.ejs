            </div>
            <div class="leftCol">
                <div class="about-left">

                </div>
            </div>
        </div>

    </div>
</div>


<%- partial('partials/footer.ejs') %>


<script type="text/javascript">

    $(document).ready(function () {
        db_functions.getAboutUruTexts(function (data) {
                $.each(data.objects, function (index, item) {
                    dust.render('about_text', item, function (err, out) {
                        $('.main-text').append(out);
                    });
                });

        });

        db_functions.getAboutUruItems(function (data) {

            $.each(data.objects, function (index, item) {
                dust.render('about_item', item, function (err, out) {
                    $('.about-left').append(out);
                });
            });
        });
    });

</script>

</body>
</html>