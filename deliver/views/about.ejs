<body>
<%- partial('partials/body_top.ejs') %>
<div id="wrap">
    <div id="header">
        <%-partial('partials/menu.ejs')%>
        <%-partial('partials/user_box.ejs')%>
        <%-partial('partials/failures.ejs')%>
        <%-partial('partials/tag_search.ejs') %>
    </div>

    <!--<div id="content" class="cf" style="background-image: url('/images/about.png'); background-position: center -30px; height: 1300px; padding-bottom:0px;">-->
        <div id="content" class="cf">
            <h2><a href="javascript:void(0);" style="text-decoration: none;">
עורו - הבית של הרוב
            </a></h2>
            <div class="rightCol">
                <div class="main-text">

